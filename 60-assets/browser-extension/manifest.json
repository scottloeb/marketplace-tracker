{
  "manifest_version": 3,
  "name": "Marketplace Tracker",
  "version": "1.0.1",
  "description": "One-click marketplace listing capture with automatic data extraction",
  "permissions": [
    "activeTab",
    "storage",
    "tabs"
  ],
  "host_permissions": [
    "*://*.craigslist.org/*",
    "*://*.facebook.com/*",
    "*://*.ebay.com/*",
    "*://*.offerup.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [{
    "matches": [
      "*://*.craigslist.org/*/*",
      "*://*.facebook.com/marketplace/item/*",
      "*://*.ebay.com/itm/*",
      "*://*.offerup.com/item/*"
    ],
    "js": ["content.js"],
    "run_at": "document_end"
  }],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Save to Marketplace Tracker"
  }
}